# ============================================
# LLM CONFIGURATION
# ============================================

# HuggingFace API Key (Get free key from https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# LLM Provider: Options are 'huggingface' or 'ollama'
LLM_PROVIDER=huggingface

# LLM Model
LLM_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct

# ============================================
# APP CONFIGURATION
# ============================================

APP_NAME=Travel Itinerary Chatbot
DEBUG_MODE=False

# ============================================
# DATABASE CONFIGURATION
# ============================================

DATABASE_PATH=data/user_data.db
VECTOR_DB_PATH=data/vector_db

# ============================================
# LLM SETTINGS
# ============================================

MAX_TOKENS=1000
TEMPERATURE=0.7

# ============================================
# RAG SETTINGS
# ============================================

CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
